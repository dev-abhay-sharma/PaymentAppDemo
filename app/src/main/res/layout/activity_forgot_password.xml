<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarThumbVertical="@null"
    tools:context=".signin.ForgotPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="97dp"
                android:layout_height="109dp"
                android:src="@drawable/login2" />

            <ImageView
                android:id="@+id/forgotBackLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="-90dp"
                android:src="@drawable/general_back_grey_icon" />

            <TextView
                android:id="@+id/forget_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:text="forgot password"
                android:textAllCaps="true"
                android:textColor="#6C6B6B"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:transitionName="logo_text" />

            <ImageView
                android:id="@+id/forget_password_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/forgot_pass_first_new"
                android:transitionName="logo_image" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:transitionName="password_tran"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forgotMob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/edit_text_sky_blue"
                    android:hint="Mobile No"
                    android:inputType="number"
                    android:paddingVertical="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/forgotNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@drawable/blue_button_background"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="@dimen/_15ssp" />

        </LinearLayout>

        <!--        <ImageView-->
        <!--            android:layout_width="144dp"-->
        <!--            android:layout_height="134dp"-->
        <!--            android:layout_alignParentStart="true"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:src="@drawable/login3" />-->

        <!--        <ImageView-->
        <!--            android:layout_width="143dp"-->
        <!--            android:layout_height="128dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:src="@drawable/login1" />-->

    </RelativeLayout>


</ScrollView>