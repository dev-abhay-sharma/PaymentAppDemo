<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PostPaidCustInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/blue_fill_rectangle_color">

        <ImageView
            android:id="@+id/goToBack4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Customer INFO"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/bsNlPostPaidError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No bill data available !"
        android:textSize="@dimen/_20ssp"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_190sdp"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/noCustPostData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postpaid Customer Information"
                android:textColor="#090909"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/checkmarksuccess" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Summary"
                android:textColor="@color/logo_blue"
                android:textSize="25sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LandLine No : "
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/landLineNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="no"
                        android:textStyle="bold"
                        android:textColor="#656363"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Operator : "
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/landLineOp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="op"
                        android:textStyle="bold"
                        android:textColor="#656363"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="@dimen/_290sdp"
                android:layout_height="1dp"
                android:background="#fff"/>

            <TextView
                android:id="@+id/landLineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/logo_blue"
                android:textSize="@dimen/_20ssp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Number : "
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/landLineBillNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no"
                    android:textStyle="bold"
                    android:textColor="#656363"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Date : "
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/landLineBillDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textColor="#656363"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Amount : "
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/landLineBillAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="amount"
                    android:textStyle="bold"
                    android:textColor="#656363"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Date : "
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/landLineDueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textColor="#656363"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>