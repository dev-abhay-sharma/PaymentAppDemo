<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="10dp"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beneficiary Code : "
                        android:textColor="#212529"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/listCodeBeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="code"
                        android:textColor="#727476"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beneficiary Name : "
                        android:textColor="#212529"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/listNameBeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="#727476"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account No : "
                        android:textColor="#212529"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/listAccountNoBeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="acc"
                        android:textColor="#727476"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Type : "
                        android:textColor="#212529"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/listAccountTypeBeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textColor="#727476"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IFSC Code : "
                        android:textColor="#212529"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/listIfscBeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ifsc code"
                        android:textColor="#727476"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Name : "
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="#212529"/>

                    <TextView
                        android:id="@+id/listBankNameBeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="#727476"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/listBeneId2Beta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bene id : "
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="#212529"/>

                    <TextView
                        android:id="@+id/listVerify2Beta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="#727476"/>

                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal">-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Status : "-->
<!--                        android:textColor="#212529"-->
<!--                        android:textSize="@dimen/_10ssp"-->
<!--                        android:textStyle="bold" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/listStatus"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="status"-->
<!--                        android:textColor="#727476"-->
<!--                        android:textSize="@dimen/_10ssp"-->
<!--                        android:textStyle="bold" />-->

<!--                </LinearLayout>-->

            </LinearLayout>

        </LinearLayout>




        <!--        Transfer-->
        <LinearLayout
            android:id="@+id/beneMoneyTransferBeta"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:layout_gravity="right"
            android:paddingEnd="5dp"
            android:layout_marginTop="-48dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/rounded_blue"
            android:visibility="visible">


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/right_arrow"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:text="Transfer"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>


        <!--        Delete-->
        <LinearLayout
            android:id="@+id/listDeleteBeta"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:layout_gravity="right"
            android:paddingEnd="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/rounded_red"
            android:visibility="visible">


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/delete_icon"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:text="Delete"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="#F91302"
                android:gravity="center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>



        <!--        Verify-->
        <LinearLayout
            android:id="@+id/listVerifyBeta"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:layout_gravity="right"
            android:paddingEnd="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_yellow"
            android:visibility="visible">


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/verify"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:text="Verify"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="#F5DC03"
                android:gravity="center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>