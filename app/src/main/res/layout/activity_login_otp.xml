<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_5sdp"
    android:elevation="@dimen/_2sdp"
    tools:context=".signin.LoginOtp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loginOtpBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/cross_vector"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:textColor="#484747"
            android:textStyle="bold"
            android:textSize="@dimen/_20ssp"
            android:layout_gravity="center"
            android:layout_marginTop="-15dp"/>

        <TextView
            android:id="@+id/loginMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"/>


        <com.chaos.view.PinView
            android:id="@+id/loginOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:viewType="line"
            app:itemCount="6"
            style="@style/PinWidget.PinView"
            app:hideLineWhenFilled="true"
            android:inputType="number"
            android:textColor="#3C3A3A"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:cursorColor="#F44336"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/loginOtpMiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="error"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#F50A0A"
            android:visibility="gone"
            android:textStyle="bold"/>

        <View
            android:layout_width="@dimen/_290sdp"
            android:layout_height="1dp"/>

