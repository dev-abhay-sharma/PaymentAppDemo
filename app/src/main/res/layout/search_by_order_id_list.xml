<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID :"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/reOrder_no1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:text="9267103351"
                android:textColor="#656060"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/reDateTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_55sdp"
                android:text="Date"
                android:textColor="#64AEE8"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <View
            android:id="@+id/verticalSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#706D6D" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/reImage1"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/user" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reMobNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9267103351"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/reStatus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Success"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/reOperator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JIO"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-70dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/rupee_green"
                        android:layout_marginTop="@dimen/_3sdp"/>

                    <TextView
                        android:id="@+id/reAmount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1000.00"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>

            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="@dimen/_50sdp"-->
<!--                android:orientation="horizontal">-->


<!--                <ImageView-->
<!--                    android:layout_width="@dimen/_15sdp"-->
<!--                    android:layout_height="@dimen/_15sdp"-->
<!--                    android:src="@drawable/rupee_green"-->
<!--                    android:layout_marginTop="@dimen/_3sdp"/>-->

<!--                <TextView-->
<!--                    android:id="@+id/reAmount1"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textStyle="bold"-->
<!--                    android:text="1000.00"-->
<!--                    android:textColor="@color/green"-->
<!--                    android:textSize="@dimen/_14ssp" />-->

<!--            </LinearLayout>-->


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-30dp"
            android:orientation="horizontal">

            <!--            <Button-->
            <!--                android:id="@+id/raise_btn"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Raise"-->
            <!--                android:visibility="gone" />-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/raise_btn1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/raise_blue_button"
                android:text="Raise"
                android:textSize="@dimen/_12sdp"
                android:textColor="#fff"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>